# ================================================
# Couple Chat AI - Environment Configuration
# ================================================
# Copy this file to .env and fill in the values

# Application Settings
APP_NAME=""
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# ================================================
# Supabase Configuration (Required)
# ================================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_STORAGE_BUCKET=media

# ================================================
# Encryption Key (Required)
# ================================================
# Generate with: python -c "import secrets, base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
ENCRYPTION_KEY=your-base64-encoded-32-byte-key

# ================================================
# Demo Room Configuration
# ================================================
# These are the default demo credentials
DEMO_ROOM_ID=1
DEMO_ROOM_SECRET=12589

# ================================================
# File Upload Limits
# ================================================
MAX_FILE_SIZE_MB=5
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/wav,audio/ogg,audio/webm

# ================================================
# ChromaDB Configuration
# ================================================
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=couple_memories

# ================================================
# Embedding Model Configuration
# ================================================
# Free models: BAAI/bge-small-en-v1.5, intfloat/e5-small-v2
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_DIMENSION=384

# ================================================
# LLM Configuration
# ================================================
# Path to your local GGUF model file
LLM_MODEL_PATH=./models/llama-3.1-8b-instruct.gguf
LLM_CONTEXT_LENGTH=4096
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.7

# ================================================
# Memory Configuration
# ================================================
MEMORY_RETRIEVAL_LIMIT=10
MESSAGE_HISTORY_LIMIT=20
COSINE_SIMILARITY_THRESHOLD=0.85

# ================================================
# NSFW Configuration
# ================================================
NSFW_CONSENT_TIMEOUT_HOURS=24
